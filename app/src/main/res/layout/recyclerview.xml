<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_2dp">

    <android.support.constraint.ConstraintLayoutConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_4dp"
        android:background="@drawable/recycler_item_background"
        android:paddingBottom="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textViewSportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:background="@drawable/oval_shape"
            android:padding="@dimen/size_6dp"
            android:text="Football"
            android:textColor="@color/colorDarkRed"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_4dp"
            android:maxLines="3"
            android:text="Exceptional' Foden key to Man City Future - Guardiola"
            android:textColor="#000"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPicture"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSportName" />

        <ImageView
            android:id="@+id/imageViewPicture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="@dimen/size_8dp"
            android:layout_marginStart="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_2dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_2dp"
            android:inputType="text"
            android:maxLines="1"
            android:text="2019-04-04"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

        <TextView
            android:id="@+id/textViewLeagueDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_6dp"
            android:maxLines="5"
            android:text="Manchester City Manager Pep Guardiola expects Phil Foden to play a key role in the side over the next decade and says the 18-year-old will be more involved in the first eam next season."
            android:textColor="#000"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewPicture"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate" />
    </android.support.constraint.ConstraintLayoutConstraintLayout>
</android.support.constraint.ConstraintLayout>
